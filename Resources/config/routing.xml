<?xml version="1.0" encoding="UTF-8" ?>

<routes xmlns="http://symfony.com/schema/routing"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/routing http://symfony.com/schema/routing/routing-1.0.xsd">
	<route id="webit_sitemap_generate" pattern="/sitemap/generate">
        <default key="_controller">WebitSitemapBundle:Sitemap:generateSitemap</default>
    </route>
    
	<route id="webit_sitemap_get" pattern="/sitemap">
        <default key="_controller">WebitSitemapBundle:Sitemap:getSitemap</default>
    </route>
    
    <route id="webit_sitemap_static" pattern="/sitemap.xml">
        <default key="_controller">WebitSitemapBundle:Sitemap:getSitemap</default>
    </route>
</routes>
